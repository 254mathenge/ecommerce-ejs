<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%=AdminPage%></title>
  <link rel="stylesheet" href="/css/user.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
</head>
<body>
    <div class="app-container">
      <div class="catalog-container">
        <div class="breadcrumb">
          <span>Main</span> / <span class="active">Catalog</span>
        </div>
        <div class="header">
          <h1>Catalog <span class="info-badge">i</span></h1>
          <div class="view-options">
            <div class="view-buttons">
              <button class="view-btn active">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="7" height="7" x="3" y="3" rx="1"/><rect width="7" height="7" x="14" y="3" rx="1"/><rect width="7" height="7" x="14" y="14" rx="1"/><rect width="7" height="7" x="3" y="14" rx="1"/></svg>
              </button>
              <button class="view-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" x2="21" y1="6" y2="6"/><line x1="3" x2="21" y1="12" y2="12"/><line x1="3" x2="21" y1="18" y2="18"/></svg>
              </button>
            </div>
            <div class="sort-dropdown">
              <span>Popular First</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
            </div>
          </div>
          <!-- logout btn -->
<a href="/logout" >
  <button style="font-size: 18px; padding:5px; ">Logout</button>
</a>
        </div>
        <div class="content">
          <div class="sidebar">
            <div class="filter-section">
              <div class="filter-header">
                <h3>Category</h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 15-6-6-6 6"/></svg>
              </div>
              <div class="filter-options">
                <div class="checkbox-item">
                  <input type="checkbox" id="category-all" checked>
                  <label for="category-all">All</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="category-gaming" checked>
                  <label for="category-gaming">Women</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="category-electronics" checked>
                  <label for="category-electronics">Men</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="category-traveling">
                  <label for="category-traveling">Kids</label>
                </div>
              </div>
            </div>
            

            
            <div class="filter-section">
              <div class="filter-header">
                <h3>Price Range</h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 15-6-6-6 6"/></svg>
              </div>
              <div class="filter-options">
                <div class="checkbox-item">
                  <input type="checkbox" id="color-all" checked>
                  <label for="color-all">All</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="color-white">
                  <label for="color-white">$0 - $50</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="color-blue" checked>
                  <label for="color-blue">$51 - $100</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="color-black">
                  <label for="color-black">$101 - $150</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="color-silver">
                  <label for="color-silver">$151 - $200</label>
                </div>
                <div class="checkbox-item">
                  <input type="checkbox" id="color-silver">
                  <label for="color-silver">$201 </label>
                </div>
              </div>
            </div>
            
            <div class="filter-section">
              <div class="toggle-option">
                <span>Only in Stock</span>
                <label class="toggle">
                  <input type="checkbox" checked>
                  <span class="toggle-slider"></span>
                </label>
              </div>
            </div>
            
            <div class="filter-actions">
              <button class="btn-add-filters">Add Filters</button>
              <button class="btn-clear">Clear</button>
            </div>
          </div>
          <div class="products-grid">
            <% products.forEach(product => { %>
              <div class="product-card">
                <div class="product-image">
                  <img src="<%= product.image %>" alt="<%= product.name %>">
                  <button class="favorite-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
                    </svg>
                  </button>
                </div>
                <div class="product-info">
                  <h3><%= product.name %></h3>
                  <p class="product-category"><%= product.category %></p>
                  <div class="product-price">
                    <span class="current-price">$<%= product.price.toFixed(2) %></span>
                    <% if (product.originalPrice) { %>
                      <span class="original-price">$<%= product.originalPrice.toFixed(2) %></span>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
          
        <!-- </div> -->
      </div>
</body>
</html>