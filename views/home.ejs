<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= AdminPage%></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="admin-header">
      <form class="admin-search">
        <div class="admin-search">
          <i class="fa fa-search"></i>
          <input type="text" id="search" placeholder="Search" />
        </div>
      </form>
      <div class="fa-not">
        <i class="fa fa-envelope-o"></i>
      </div>
      <div class="fa-not">
        <i class="fa fa-bell-o"></i>
      </div>
      <div class="user-panel">
        <div class="user-image">
          <img src="/images/person.jpg" alt="user" />
        </div>
        <div class="user-panel-text">
          <h3>Jimmy Sullivan</h3>
          <p>Alabama Store</p>
        </div>
      </div>
    </div>
    <div class="container-admin">
      <div class="top-bar">
        <div class="top-top-bar">
            <div class="search-top">
              <i class="fa fa-search"></i>
              <input type="text" id="search" placeholder="Search" />
              </div>
          <div class="dropdown">
            <select class="search-category">
              <option value="all">All</option>
              <option value="books">Books</option>
              <option value="electronics">Electronics</option>
              <option value="fashion">Fashion</option>
            </select>
          </div>
          <div class="dropdown">
            <select class="search-category">
              <option value="all">All</option>
              <option value="books">Books</option>
              <option value="electronics">Electronics</option>
              <option value="fashion">Fashion</option>
            </select>
          </div>
          <div class="filter">
            <i class="fa fa-filter"></i>
            <button class="filter-btn">Filter</button>
          </div>
          <div class="add-new-product">
            <i class="fa fa-plus"></i>
            <button class="add-btn">Add new product</button>
          </div>
        </div>
                <div class="top-bottom-bar">
                   <div class="dropdown">
                    <h4>category</h4>
                    <select class="search-category">
                        <option value="all">All Collection</option>
                        <option value="books">Books</option>
                        <option value="electronics">Electronics</option>
                        <option value="fashion">Fashion</option>
                      </select>
                    </div>
                    <div class="dropdown">
                        <h4>Price</h4>
                        <select class="search-category">
                            <option value="all">$50-$100</option>
                            <option value="books">Books</option>
                            <option value="electronics">Electronics</option>
                            <option value="fashion">Fashion</option>
                          </select>
                        </div>
                        <div class="dropdown">
                            <h4>Status</h4>
                            <select class="search-category">
                                <option value="all">All</option>
                                <option value="books">Books</option>
                                <option value="electronics">Electronics</option>
                                <option value="fashion">Fashion</option>
                              </select>
                            </div>
                            <div class="dropdown">
                                <h4>store</h4>
                                <select class="search-category">
                                    <option value="all">All Collection</option>
                                    <option value="books">Books</option>
                                    <option value="electronics">Electronics</option>
                                    <option value="fashion">Fashion</option>
                                  </select>
                                </div>
                </div>
                </div>

            </div>
            <div class="container-home">
              <div class="product-grid">
                  <div class="product-title">
                      <div class="checkbox-header">
                          <input type="checkbox" id="select-all">
                      </div>
                      <h3>Product Info</h3>
                      <h3>Price</h3>
                      <h3>Stock</h3>
                      <h3>Active</h3>
                  </div>
                  <% products.forEach(product => { %>
                      <div class="product">
                          <div class="product-checkbox">
                              <input type="checkbox" class="product-select">
                          </div>
                          <div class="product-name">
                              <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                              <div class="product-info">
                                  <h4><%= product.name %></h4>
                                  <span><%= product.sku %></span>
                              </div>
                          </div>
                          <div class="product-price">
                              $<%= product.price.toFixed(2) %>
                          </div>
                          <div class="product-stock">
                              <div class="stock-bar">
                                  <div class="stock-level" style="width:<%= Math.min((product.stock / 1000) * 100, 100) %>%"></div>
                              </div>
                              <div class="stock-number"><%= product.stock %></div>
                          </div>
                          <!-- <div class="product-instock">
                              <%= product.inStock ? 'In Stock' : 'Out of Stock' %>
                          </div> -->
                          <div class="toggle-switch">
                              <label>
                                  <input type="checkbox" <%= product.inStock ? 'checked' : '' %>>
                                  <span class="toggle-slider"></span>
                              </label>
                          </div>
                      </div>
                  <% }) %>
              </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </body>
</html>
